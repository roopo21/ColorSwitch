<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.ImageInput?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainPage" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.MainPageController">
   <children>
      <ImageView fitHeight="720" fitWidth="1280.0" preserveRatio="true">
         <image>
            <Image url="@../view/BackDropMainMenu.jpg" />
         </image>
      </ImageView>
      <Button fx:id="settings" layoutX="1195.0" layoutY="26.0" mnemonicParsing="false" onAction="#changeScreenSettings" prefHeight="50.0" prefWidth="47.0" text="Button">
         <effect>
            <ImageInput>
               <source>
                  <Image url="@../sample/Assets/settings.png" />
               </source>
            </ImageInput>
         </effect>
      </Button>
      <Button fx:id="newGame" layoutX="122.0" layoutY="268.0" mnemonicParsing="false" onAction="#changeScreenNewGame" prefHeight="50.0" prefWidth="183.0" style="-fx-background-color: #900DFF;" text="NEW GAME" textFill="#373737">
         <font>
            <Font name="Franklin Gothic Medium" size="20.0" />
         </font>
      </Button>
      <Button fx:id="savedGames" layoutX="122.0" layoutY="360.0" mnemonicParsing="false" onAction="#changeScreenSavedGame" prefHeight="50.0" prefWidth="183.0" style="-fx-background-color: #FF0181;" text="SAVED GAMES" textFill="#373737">
         <font>
            <Font name="Franklin Gothic Medium" size="20.0" />
         </font>
      </Button>
      <Button fx:id="leaderboard" layoutX="122.0" layoutY="451.0" mnemonicParsing="false" onAction="#changeScreenLeaderboard" prefHeight="50.0" prefWidth="183.0" style="-fx-background-color: #32DBF0;" text="LEADERBOARD" textFill="#373737">
         <font>
            <Font name="Franklin Gothic Medium" size="20.0" />
         </font>
      </Button>
      <Button fx:id="exitGame" layoutX="122.0" layoutY="549.0" mnemonicParsing="false" onAction="#changeScreenExit" prefHeight="50.0" prefWidth="183.0" style="-fx-background-color: #FAE100;" text="EXIT" textFill="#373737">
         <font>
            <Font name="Franklin Gothic Medium" size="20.0" />
         </font>
      </Button>
      <BorderPane fx:id="settingsPane" layoutX="895.0" layoutY="141.0" prefHeight="500.0" prefWidth="300.0" />
   </children>
</AnchorPane>
